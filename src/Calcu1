import java.util.Scanner;
public class Calivotation2
{
	public static void main (String args[])
	{
	//Este fue el segundo ejercicio, en donde el usuario registraba los candidatos y votaba por ellos
	Scanner number=new Scanner(System.in);
	Scanner cand=new Scanner(System.in);
	int c=0;
	int o=0;
	int a=0;
	int e=0;
	int cantc=0;
	int option=0;
	String candi[]={"",""};
	String vote[]={"","","","","","","","","",""};
	int allvotes[]=new int[10];
	boolean option1=false;
	boolean option2=false;
	boolean option3=false;
	String candvariable;
	String votevariable;
	
			
		while (option!=4)
		{
			
			System.out.println("MENU");
			System.out.println("1. Registrar candidatos");
			System.out.println("2.Iniciar Votacion");
			System.out.println("3.Mostrar ganador");
			System.out.println("4.salir");
			option=number.nextInt();
			
			if (option==1)
			{
				if (option1==false)
				{option1=true;
				System.out.print("Digite los candidatos");
				for(int i=0; i<2; i++)
				{
				candi[i]=cand.nextLine();
				}
				}
				else
				System.out.println("ya registraste los candidatos");
			}
			
			if (option==2)
			{	if(option1==true & option2==false)
				{
				for(int i=0; i<10; i++)
				{
				System.out.println("por favor,digite el candidato por el que va a votar");
				vote[i]=cand.nextLine();
				}
				option2=true;
				}
				else
				System.out.println("Debe registrar primero los candidatos o ya realizo la votacion");	
			}
				
			if(option==3)
			{
			if(option2==true & option3==false)
			{
				System.out.println("Bienvenido a las votaciones, tienes como total de votos: 10");
					while(c<2)
					{
						while(o<10)
						{
						candvariable=candi[c];
						votevariable=vote[o];
						if (votevariable.equals(candvariable))
						{allvotes[c]++;
						}
						o++;
						}
					o=0;
					c++;
					}
					while (a<10)
					{
						if(allvotes[e]>=allvotes[a])
						{
						a++;
						}
						else
						{
						e++;
						a=0;
						}
					}
					String winner=candi[e];
					System.out.println("Las votaciones se han efectuado, el candidato ganador es: "+winner);
					option3=true;
			}
			else
				System.out.println("ya has generado el ganador o no has generado las votaciones");
			}		
		}	
}
}	